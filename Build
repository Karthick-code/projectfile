properties([
    parameters([
        Fileparameter (filelocation 'newtext.txt' )
    ])
])
node {
    Fileparameter filelocation "$newtext.txt"
}
pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Build Success'
            }
        }
        stage("upload") {
            steps{
                echo 'upload success' 
                WithFileParameter ('newtext.txt')
                sh 'cat $newtext.txt'
            }
        }
    }
}
